<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/succursale_add_service"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3A5C1"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">


    <TextView
        android:id="@+id/PageTitle"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="32dp"
        android:background="@drawable/login_pagetitle_format"
        android:text="Dashboard Administrateur"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/PageSubtitle"
        android:layout_width="346dp"
        android:layout_height="34dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="84dp"
        android:text="Ajoute un nouveau service:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <!--    Quand le search de succursale est validÃ©, afficher un message avec ce text view-->

    <EditText
        android:id="@+id/new_service_name"
        android:layout_width="318dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="136dp"
        android:background="@drawable/edittext_formatting"
        android:hint="Nom du service"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/dataSubtitle"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="184dp"
        android:text="Data:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/nameButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="212dp"
        android:text="Nom"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/birthdateButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="244dp"
        android:text="Date de naissance"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/addressButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="272dp"
        android:text="Addresse"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/permitTypeButton"
        android:layout_width="255dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="300dp"
        android:text="Type de permit (si applicable)"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <TextView
        android:id="@+id/documentSubtitle"
        android:layout_width="185dp"
        android:layout_height="25dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="356dp"
        android:text="Documents:"
        android:textColor="#000000"
        android:textSize="18sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/domicileButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="380dp"
        android:text="Preuve de domicile"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/statutButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="408dp"
        android:text="Preuve de statut"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <RadioButton
        android:id="@+id/photoButton"
        android:layout_width="163dp"
        android:layout_height="30dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="436dp"
        android:text="Photo du client"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/createService"
        android:layout_width="180dp"
        android:layout_height="45dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="488dp"
        android:text="Ajouter le service"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>