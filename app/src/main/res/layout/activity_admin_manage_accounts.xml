<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"

    android:id="@+id/admin_manage_accounts"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#B3A5C1"
    android:padding="@dimen/box_inset_layout_padding"
    tools:context=".MainActivity"
    tools:deviceIds="wear">


    <TextView
        android:id="@+id/PageTitle"
        android:layout_width="369dp"
        android:layout_height="42dp"
        android:layout_marginStart="20dp"
        android:layout_marginTop="56dp"
        android:background="@drawable/login_pagetitle_format"
        android:text="Dashboard Administrateur"
        android:textAlignment="center"
        android:textColor="#FFFFFF"
        android:textIsSelectable="false"
        android:textSize="28sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:ignore="MissingConstraints" />

    <TextView
        android:id="@+id/PageSubtitle"
        android:layout_width="272dp"
        android:layout_height="36dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="108dp"
        android:text="Gérez les comptes:"
        android:textAlignment="textStart"
        android:textColor="#000000"
        android:textSize="24sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <EditText
        android:id="@+id/searchAccount"
        android:layout_width="271dp"
        android:layout_height="32dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="160dp"
        android:background="@drawable/edittext_formatting"
        android:contextClickable="false"
        android:ems="10"
        android:hint="Trouver un compte"
        android:inputType="textEmailAddress"
        android:textAlignment="viewStart"
        android:textColor="#000000"
        android:visibility="visible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        tools:visibility="visible" />

    <ImageButton
        android:id="@+id/searchAccountsButton"
        android:layout_width="48dp"
        android:layout_height="44dp"
        android:layout_marginStart="322dp"
        android:layout_marginTop="154dp"
        android:background="@drawable/login_pagetitle_format"
        android:backgroundTintMode="src_atop"
        android:foregroundTintMode="add"
        android:tint="#3C3F41"
        android:tintMode="screen"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:srcCompat="@android:drawable/ic_menu_search" />

    <!--    Quand le search d'usager est validé, afficher un message avec ce text view-->
    <TextView
        android:id="@+id/succursaleValidationMessage"
        android:layout_width="255dp"
        android:layout_height="18dp"
        android:layout_marginStart="32dp"
        android:layout_marginTop="192dp"
        android:text=""
        android:textColor="#1B0404"
        android:textColorHint="#000000"
        android:visibility="invisible"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btn_supprimer_account"
        android:layout_width="192dp"
        android:layout_height="49dp"
        android:layout_marginStart="36dp"
        android:layout_marginTop="264dp"
        android:background="#c91100"
        android:text="Supprimer ce compte"
        android:textColor="#FFFFFF"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

</androidx.constraintlayout.widget.ConstraintLayout>